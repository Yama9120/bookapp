<div class="book-content" style="
    background: linear-gradient(to bottom, #2e8b57, #00C300);
    min-height: 30vh;
    height: 400px;
    overflow: hidden;  /* 中身がはみ出るのを防ぐため */
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100vw;  /* 画面幅いっぱいに */
    margin-left: calc(-50vw + 50%);  /* 横の余白を消す */
">

    <div class="container" style="
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100%;
    ">
        <h1 style="color:white; text-align: center;">図書館 & 蔵書検索</h1>

        <!-- 検索フォーム -->
        <form id="search-form" style="margin-top: 20px;">
            <div class="input-group">
                <input type="text" id="search-input" placeholder="探したい本のキーワードを入力" class="form-control" style="width: 300px;">
                <div class="input-group-append">
                    <button type="submit" class="btn custom-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>



<!-- 検索結果はコンテナの外に表示 -->
<div class="container mt-4">
    <div id="results"></div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/scripts/booksearch_googleapi.js"></script>

<script>
    $(document).ready(function() {
        $('#search-form').on('submit', function(event) {
            event.preventDefault(); // デフォルトのフォーム送信を防ぐ
            const query = $('#search-input').val(); // 入力値を取得
            if (query.length > 2) { // 3文字以上で検索を実行
                searchBooks(query); // 検索関数を呼び出す
            } else {
                $('#results').html('<p>検索キーワードは3文字以上で入力してください。</p>');
            }
        });
    });
</script>
