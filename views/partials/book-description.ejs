<!-- views/partials/book-description.ejs -->
<div id="processed-description" style="display: none;">
    <% const description = ''; %>
    <% if (typeof description === 'string' && description.trim() !== '') { %>
        <%- description.replace(/\n/g, '<br>') %>
    <% } else { %>
        <p>説明文がありません。</p>
    <% } %>
</div>