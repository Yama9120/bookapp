<!-- 図書館検索フォーム -->
<form id="library-search-form">
    <label for="pref">都道府県:</label>
    <select id="pref">
        <option value="">都道府県を選択してください</option>
    </select>
    
    <label for="city">市区町村:</label>
    <select id="city">
        <option value="">市区町村を選択してください</option>
    </select>
    
    <button type="submit">図書館検索</button>
</form>

<!-- 図書館の検索結果表示 -->
<div id="search-results"></div>



<!-- 蔵書検索フォーム -->
